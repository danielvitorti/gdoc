@model IEnumerable<gdoc.Models.Documento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Documentos Cadastrados</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Documento", "criar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacaoDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataCadastro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeDocumento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoDocumento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacaoDocumento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataCadastro)
        </td>
        <td>
            @Html.ActionLink("Alterar", "editar", new { id=item.idDocumento }) |
            @Html.ActionLink("Detalhes", "detalhe", new { id=item.idDocumento }) |
            @Html.ActionLink("Excluir", "excluir", new { id=item.idDocumento })
        </td>
    </tr>
}

</table>
