@model gdoc.Models.Documento

@{
    ViewBag.Title = "GDOC - Cadastrar novo Documento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("criar", "Documento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cadastrar novo documento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nomeDocumento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeDocumento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomeDocumento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Arquivo:
            </label>
            <div class="col-md-10">
                <input type="file" name="arquivo" id="arquivo" required />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipoDocumento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.ValidationMessageFor(model => model.tipoDocumento, "", new { @class = "text-danger" })
                <select name="tipoDocumento" id="tipoDocumento" class="form-control">
                    <option value=""></option>
                    <option value="1">Conta</option>
                    <option value="2">Cheque</option>
                    <option value="3">Recibo</option>
                    <option value="4">Comprovante de Pagamento</option>
                    <option value="5">Foto</option>
                    <option value="6">Contracheque</option>
                    <option value="7">Nota fiscal</option>
                    <option value="8">Rifa</option>
                    <option value="9">Canhoto</option>
                    <option value="10">Bilhete de cinema</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.observacaoDocumento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.observacaoDocumento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observacaoDocumento, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Documentos Cadastrados", "index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
